{% extends "SNSysNewsBundle::layout.html.twig" %}
{% block title %}

  Supprimer un commentaire - {{ parent() }}

{% endblock %}

{% block snsysnews_body %}

  <h2>Supprimer un commentaire</h2>

  <p>
    
    Etes-vous certain de vouloir supprimer le commentaire "{{ com.contenu }}" ?
    
  </p>

  {# On met l'id de l'annonce dans la route de l'action du formulaire #}

  <form action="{{ path('sn_sys_news_deletecomment', {'news_id': news.id, 'comment_id': com.id}) }}" method="post">

    <p><a href="{{ path('sn_sys_news_view', {'id': news.id}) }}" style="text-decoration:none; padding:3px; border-width:1px; border-style:solid; border-color: orange;">

      <FONT COLOR="#E97406">

      Retour à la news

    </a></p><br>

    {# Ici j'ai écrit le bouton de soumission à la main #}

    <input type="submit" value="Supprimer" class="btn btn-danger" />

    {# Ceci va générer le champ CSRF #}

    {{ form_rest(form) }}

  </form>

{% endblock %}
